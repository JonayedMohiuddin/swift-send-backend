extends layout.pug 

block content
   div(style='width:100%; height:100%; display:flex; flex-direction:row; align-items:center; justify-content:center; margin: 0 20px; padding-top:20vh;')
      img(src=`/public/images/${error.status}.webp`, alt='404' style='width:500px; padding: 0 20px;')
      div(style='width:850px; height:100%; display:flex; flex-direction:column; align-items:left; justify-content:center; padding: 0 20px; font-size: 0.7rem;')
         h1= message
         h2= error.status
         pre(style='white-space: pre-wrap;') #{error.stack}
